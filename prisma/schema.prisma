generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

model Account {
  id                       String  @id @default(cuid())
  userId                   String
  type                     String
  provider                 String
  providerAccountId        String
  refresh_token            String? @db.Text
  access_token             String? @db.Text
  expires_at               Int?
  token_type               String?
  scope                    String?
  id_token                 String? @db.Text
  session_state            String?
  refresh_token_expires_in Int?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@index([userId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

model User {
  id            String         @id @default(cuid())
  name          String?
  email         String?        @unique
  emailVerified DateTime?
  image         String?
  avatar        String?
  birth         DateTime?
  occupation    Occupation?    @relation(fields: [occupationId], references: [id], onDelete: Cascade)
  occupationId  Int?
  gender        String?        @db.Char(1)
  accounts      Account[]
  sessions      Session[]
  subscriptions Subscription[]
  contentTypes  ContentType[]
  genres        Genre[]
  reviews       Review[]

  @@index([occupationId])
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

enum Watch {
  WATCHED
  WATCHING
  WANT_TO_WATCH
}

model Review {
  id      Int    @id @default(autoincrement())
  user    User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId  String
  movieId Int
  watch   Watch
  rating  Int    @default(0) @db.TinyInt

  @@index([userId])
}

model Subscription {
  id         Int    @id @default(autoincrement())
  key        String @unique
  name       String @unique
  providerId Int?
  networkId  Int?
  users      User[]
}

model ContentType {
  id    Int    @id @default(autoincrement())
  name  String @unique
  users User[]
}

model Genre {
  id    Int    @id @default(autoincrement())
  name  String @unique
  users User[]
}

model Occupation {
  id    Int    @id @default(autoincrement())
  name  String @unique
  users User[]
}
